---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const testimonials = [
  {
    name: "Sarah T.",
    role: "Full-stack Developer",
    text: "This course transformed how I build web applications. The AI integration techniques are game-changing!",
    avatar: "/images/testimonials/sarah.jpg"
  },
  {
    name: "Michael R.",
    role: "Startup Founder",
    text: "The practical projects helped me launch my AI-powered SaaS in just 3 months. Highly recommended!",
    avatar: "/images/testimonials/michael.jpg"
  },
  {
    name: "Emily C.",
    role: "Frontend Developer",
    text: "Finally a course that bridges the gap between web development and AI. The Node.js backend content is exceptional.",
    avatar: "/images/testimonials/emily.jpg"
  }
];
---

<Layout title="AI-Powered Web Development Course">
  <main class="landing-page">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1>Master AI-Powered Web Development</h1>
        <p class="subtitle">
          Build intelligent web applications with React, Node.js, and cutting-edge AI technologies
        </p>
        <div class="cta-buttons">
          <a href="/pricing" class="primary-cta">Enroll Now</a>
          <a href="#course-outline" class="secondary-cta">View Curriculum</a>
        </div>
      </div>
      <div class="hero-image">
        <img src="/images/hero-illustration.png" alt="AI Web Development Illustration" />
      </div>
    </section>

    <!-- Key Features -->
    <section class="features">
      <h2>What You'll Learn</h2>
      <div class="feature-grid">
        <div class="feature-card">
          <div class="icon">ü§ñ</div>
          <h3>AI Integration</h3>
          <p>Learn to integrate OpenAI, Gemini, and other AI APIs into your web apps</p>
        </div>
        <div class="feature-card">
          <div class="icon">‚öõÔ∏è</div>
          <h3>React Mastery</h3>
          <p>Build modern, responsive UIs with React and advanced state management</p>
        </div>
        <div class="feature-card">
          <div class="icon">üöÄ</div>
          <h3>Node.js Backend</h3>
          <p>Create scalable APIs and microservices with Node.js and Express</p>
        </div>
        <div class="feature-card">
          <div class="icon">üîí</div>
          <h3>Production Ready</h3>
          <p>Deploy and optimize AI web apps with CI/CD and cloud platforms</p>
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="testimonials">
      <h2>What Our Students Say</h2>
      <div class="testimonial-grid">
        {testimonials.map(testimonial => (
          <div class="testimonial-card">
            <img src={testimonial.avatar} alt={testimonial.name} class="avatar" />
            <h3>{testimonial.name}</h3>
            <p class="role">{testimonial.role}</p>
            <p class="quote">"{testimonial.text}"</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Call to Action -->
    <section class="final-cta">
      <h2>Start Building AI-Powered Web Apps Today</h2>
      <a href="/pricing" class="primary-cta">Enroll Now</a>
    </section>
  </main>
</Layout>

<style>
  .landing-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    display: flex;
    gap: 2rem;
    align-items: center;
    margin: 4rem 0;
  }

  .hero-content {
    flex: 1;
  }

  .hero h1 {
    font-size: 3.5rem;
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
  }

  .primary-cta {
    background: rgb(var(--accent-light));
    color: #13151a;
    padding: 1rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .secondary-cta {
    border: 2px solid rgb(var(--accent-light));
    color: rgb(var(--accent-light));
    padding: 1rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .features {
    margin: 6rem 0;
  }

  .features h2 {
    text-align: center;
    margin-bottom: 3rem;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .feature-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 8px;
  }

  .feature-card .icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .testimonials {
    margin: 6rem 0;
  }

  .testimonial-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .testimonial-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 8px;
  }

  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-bottom: 1rem;
  }

  .final-cta {
    text-align: center;
    margin: 6rem 0;
  }
</style>
