---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Course Pricing">
  <main>
    <h1>Choose Your Plan</h1>
    <div class="pricing-grid">
      <div class="pricing-card">
        <h2>Basic</h2>
        <div class="price">$199</div>
        <ul class="features">
          <li>Full course access</li>
          <li>Downloadable resources</li>
          <li>Community access</li>
        </ul>
        <a href="/checkout/basic" class="cta-button">Get Started</a>
      </div>
      
      <div class="pricing-card popular">
        <h2>Pro</h2>
        <div class="price">$299</div>
        <ul class="features">
          <li>Everything in Basic</li>
          <li>Certificate of completion</li>
          <li>1-on-1 mentoring sessions</li>
          <li>Project code reviews</li>
        </ul>
        <a href="/checkout/pro" class="cta-button">Get Started</a>
      </div>
    </div>
  </main>
</Layout>

<style>
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .pricing-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
  }

  .pricing-card.popular {
    border: 2px solid rgb(var(--accent-light));
  }

  .price {
    font-size: 2.5rem;
    font-weight: bold;
    margin: 1rem 0;
    color: rgb(var(--accent-light));
  }

  .features {
    list-style: none;
    padding: 0;
    margin: 2rem 0;
    text-align: left;
  }

  .features li {
    margin: 0.5rem 0;
  }

  .cta-button {
    display: inline-block;
    background: rgb(var(--accent-light));
    color: #13151a;
    padding: 1rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(var(--accent-light), 0.3);
  }
</style>
